.span8
  = form_for @gif do |f|
    - if @gif.errors.any?
      #error_explanation
        %h2= "#{pluralize(@gif.errors.count, "error")} prohibited this gif from being saved:"
        %ul
          - @gif.errors.full_messages.each do |msg|
            %li= msg
    %fieldset
      = f.text_field :title, placeholder: :title, class: "input-xlarge"
      %br/
      = f.text_field :url, placeholder: :url, class: "input-xxlarge"
      %br/
      = f.text_field :tag_list, placeholder: "tags (separated by commas)", class: "input-xlarge"
    %p.actions
      = f.submit "Save", class: 'btn btn-primary'

  %hr/
  .preview
    %h2 Preview
    - if @gif.persisted?
      %h3.title= @gif.title 
      %img{ src: "#{@gif.url}" }
    - else
      %h3.title
      %img